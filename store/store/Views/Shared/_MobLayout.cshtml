<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <!--[if lte IE 8]>
        <link rel="stylesheet" href="http://yui.yahooapis.com/pure/0.6.0/grids-responsive-old-ie-min.css">
    <![endif]-->
    <!--[if gt IE 8]> 
        <link rel="stylesheet" href="http://yui.yahooapis.com/pure/0.6.0/grids-responsive-min.css">
    <!--<![endif]-->

</head>
<body>
    <div>
        <header class="store-header">
            <a class="header-back">
                <span class="icon-arrow-left"></span>
            </a>
            <div class="header-title flex" ng-show="restaurant.name">
                <span class="header-rst-name ng-binding" itemprop="name" ng-bind="restaurant.name">
                    Super Market
                </span>
            </div>
        </header>

        <div>
            @RenderBody()
        </div>
    </div>

    <script data-main='@Url.Content("~/Scripts/mob/main")' src='@Url.Content("~/Scripts/mob/lib/require/require.js")'></script>
    @*@Scripts.Render("~/bundles/require")*@
    @*@Scripts.Render("~/bundles/bootstrap")*@
    @RenderSection("scripts", required: false)
</body>
</html>
